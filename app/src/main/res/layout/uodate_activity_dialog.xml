    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เพิ่มกิจกรรม"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_activity_update"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/image" />

    <Button
        android:id="@+id/btnChooseImage_ac_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เลือกรูปภาพ" />

    <EditText
        android:id="@+id/edit_ac_name_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ชื่อกิจกรรม"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_place_name_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ชื่อสถานที่จัด"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_ac_dea_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="รายละเอียดกิจกรรม"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_place_long_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ตำแหน่งลองจิจูด"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edit_place_lat_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ตำแหน่งละติจูด"
            android:inputType="textPersonName" />

